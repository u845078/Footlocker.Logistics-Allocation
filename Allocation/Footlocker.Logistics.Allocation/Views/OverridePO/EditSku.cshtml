@model Footlocker.Logistics.Allocation.Models.ExpeditePO

@{
    ViewBag.Title = "EditSku";
}

<h2>Edit Overrides for Sku</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Overrides</legend>

        @Html.HiddenFor(model => model.Division)

        @Html.HiddenFor(model => model.PO)
        @Html.HiddenFor(model => model.Sku)
        @Html.HiddenFor(model => model.DeliveryDate)
        <div class="editor-label">
            <b>@Html.LabelFor(model => model.Sku):  </b>
            @Html.DisplayFor(model => model.Sku)
        </div>
        <div class="editor-label">
            <b>Original Override Date:  </b>
            @Html.DisplayFor(model => model.DeliveryDate)
        </div>


        <div class="editor-label">
            <b>New @Html.LabelFor(model => model.OverrideDate):</b>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OverrideDate)
            @Html.ValidationMessageFor(model => model.OverrideDate)
        </div>

        <br />
        <p>
            <input type="submit" value="Save" class="t-button"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { div = Model.Division }, new {@class="t-button"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

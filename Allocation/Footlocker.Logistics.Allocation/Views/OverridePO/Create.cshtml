@model Footlocker.Logistics.Allocation.Models.ExpeditePOModel

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Override PO</legend>

        @Html.DropDownListFor(m => Model.NewPO.Division, new SelectList(Model.Divisions, "DivCode", "DivisionName"))
        <br />
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.NewPO.PO) (#######)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewPO.PO)
            @Html.ValidationMessageFor(model => model.NewPO.PO)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewPO.OverrideDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewPO.OverrideDate)
            @Html.ValidationMessageFor(model => model.NewPO.OverrideDate)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
        @if (ViewData["message"] != null)
        { 
            @Html.Raw("<font color='red'>" + ViewData["message"] + "</font>")
        }
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "t-button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

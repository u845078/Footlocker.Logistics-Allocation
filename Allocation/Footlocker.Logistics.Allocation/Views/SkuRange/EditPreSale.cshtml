@model Footlocker.Logistics.Allocation.Models.PreSaleModel
@{
    ViewBag.Title = "EditPreSale";
}

<script></script>

<h2>Edit PreSale</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    if ((ViewData["message"] != "") && (ViewData["message"] != null))
    {
        <font color="red">@Html.Raw(ViewData["message"])</font>
    }

    <fieldset>
        <legend>Edit PreSale</legend>

        @Html.HiddenFor(model => model.preSaleSKU.ItemID)
        <div class="editor-label">
            @Html.LabelFor(model => model.SKU, "SKU")
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.SKU)
            @Html.DisplayFor(model => model.SKU)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.preSaleSKU.InventoryArrivalDate, "Inventory Arrival Date")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.preSaleSKU.InventoryArrivalDate)
            @Html.ValidationMessageFor(model => model.preSaleSKU.InventoryArrivalDate)
        </div>

        <p>
            <input type="submit" value="Save" class="t-button" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "PreSale", null, new { @class = "t-button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@model Footlocker.Logistics.Allocation.Models.LostSalesRequestModel

@{
    ViewBag.Title = "Download Quantum Data";
}

<h2>@ViewBag.Title</h2>

<font color="Red">
    @ViewBag.NoDataFound
</font>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Download Data For</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sku)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sku)
            @Html.ValidationMessageFor(model => model.Sku)
        </div>

        <p>
            <button type="submit">Download Lost Sales</button>       
        </p>


    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

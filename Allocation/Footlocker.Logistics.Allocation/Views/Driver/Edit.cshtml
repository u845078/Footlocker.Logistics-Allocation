@model Footlocker.Logistics.Allocation.Models.DriverModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AllocationDriver</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewDriver.Division)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.NewDriver.Division, new SelectList(Model.Divisions, "DivCode", "DivisionName"), new { disabled="true" })
            @Html.HiddenFor(model => model.NewDriver.Division)
            @Html.ValidationMessageFor(model => model.NewDriver.Division)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewDriver.Department)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.NewDriver.Department)
            @Html.HiddenFor(model => model.NewDriver.Department)
            @Html.ValidationMessageFor(model => model.NewDriver.Department)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewDriver.ConvertDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewDriver.ConvertDate)
            @Html.ValidationMessageFor(model => model.NewDriver.ConvertDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewDriver.AllocateDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewDriver.AllocateDate)
            @Html.ValidationMessageFor(model => model.NewDriver.AllocateDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewDriver.OrderPlanningDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewDriver.OrderPlanningDate)
            @Html.ValidationMessageFor(model => model.NewDriver.OrderPlanningDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewDriver.CheckNormals)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewDriver.CheckNormals)
            @Html.ValidationMessageFor(model => model.NewDriver.CheckNormals)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class="t-button"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

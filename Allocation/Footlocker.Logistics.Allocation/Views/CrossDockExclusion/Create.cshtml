@model Footlocker.Logistics.Allocation.Models.CrossDockExclusionModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CrossDockExclusion</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Exclusion.Division)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Exclusion.Division, new SelectList(Model.Divisions, "DivCode", "DivisionName"))
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Exclusion.Store)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Exclusion.Store)
            @Html.ValidationMessageFor(model => model.Exclusion.Store)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "t-button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

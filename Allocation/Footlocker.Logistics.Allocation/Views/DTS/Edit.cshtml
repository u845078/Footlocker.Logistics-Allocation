@model Footlocker.Logistics.Allocation.Models.DirectToStoreSku

@{
    ViewBag.Title = "Edit AR Sku";
}

<h2>Edit AR Sku @Html.DisplayFor(model => model.Sku)</h2>
@if ((ViewData["message"] != null) && (ViewData["message"]!=""))
{
    <font color="red">@ViewData["message"]</font>
}
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AR Sku</legend>

        @Html.HiddenFor(model => model.Sku)

        <div class="editor-label">
            @Html.LabelFor(model => model.Vendor)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Vendor, new SelectList(Model.Vendors))
            @Html.ValidationMessageFor(model => model.Vendor)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VendorPackQty)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VendorPackQty)
            @Html.ValidationMessageFor(model => model.VendorPackQty)
        </div>
        <br />
        <p>Note: Order Days are selected for the day before you want the order to go out. For example, if you select Thursday, the order will happen on a Friday.</p> 

        Order Days:<br />
        <table><tr>
            <td>
            @Html.LabelFor(model => model.OrderSun)
            </td><td>
            @Html.LabelFor(model => model.OrderMon)
            </td><td>
            @Html.LabelFor(model => model.OrderTue)
            </td><td>
            @Html.LabelFor(model => model.OrderWed)
            </td><td>
            @Html.LabelFor(model => model.OrderThur)
            @*</td><td>
            @Html.LabelFor(model => model.OrderFri)
            </td><td>
            @Html.LabelFor(model => model.OrderSat)*@
            </td>
        </tr>
        <tr>
            <td>
            @Html.EditorFor(model => model.OrderSun)
            </td><td>
            @Html.EditorFor(model => model.OrderMon)
            </td><td>
            @Html.EditorFor(model => model.OrderTue)
            </td><td>
            @Html.EditorFor(model => model.OrderWed)
            </td><td>
            @Html.EditorFor(model => model.OrderThur)
            @*</td><td>
            @Html.EditorFor(model => model.OrderFri)
            </td><td>
            @Html.EditorFor(model => model.OrderSat)*@
            </td>
        </tr></table>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "t-button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using Telerik.Web.Mvc.UI

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>  
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script> 

    <script type="text/javascript">
        $(function () {
            // Disable jQuery ajax caching - globally
            $.ajaxSetup({ cache: false });
        });
    </script>

    @(Html.Telerik().StyleSheetRegistrar()
    .DefaultGroup(group => group
        .Add("~/Content/Site.css")
        .Add("~/content/telerik.common.css")
        .Add("~/content/telerik.windows7.css")
        .Add("~/content/telerik.rtl.css")
        ))
 


  @RenderSection("HeadContent", required:false)
  @RenderSection("Scripts", required:false)

</head>
<body>
    <div class="page">
        <div id="header" style="z-index: 1000">
            <div style="color: white; float: left;">
                Current date/time: @ViewBag.CurrentDate
            </div>

            <div id="logindisplay">
                @ViewBag.FullUserName - [@HttpContext.Current.User.Identity.Name]
            </div> 
            
            <div id="title">
                <h1>Allocation <font color="red">@(System.Configuration.ConfigurationManager.AppSettings["environment"])</font></h1>
            </div>
            <br />
           <div id="menucontainer">

                @(Html.Telerik().Menu()
                .Name("Menu")
                .BindTo("Web")
                .HtmlAttributes(new { style="position:static"})
                )
            </div>                
        </div>
        <div id="main">
            @RenderSection("featured", required: false)
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>

  
    @(Html.Telerik().ScriptRegistrar().jQuery(false)
        .DefaultGroup(group => group
           .Add("telerik.common.js")
           .Add("telerik.window.js")
           .Add("telerik.draganddrop.min.js")
           .Add("telerik.combobox.js")
           .Add("telerik.menu.min.js")
           .Add("telerik.textbox.js")
           .Add("telerik.calendar.min.js")
           .Add("telerik.datepicker.min.js")
           .Add("telerik.autocomplete.min.js")
            .Add("telerik.window.min.js")
        ))
</body>

</html>

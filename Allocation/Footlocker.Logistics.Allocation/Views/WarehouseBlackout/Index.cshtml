@model IEnumerable<Footlocker.Logistics.Allocation.Models.WarehouseBlackout>

@{
    ViewBag.Title = "Index";
}

<h2>Warehouse Blackout Dates</h2>
<p>
    The blackout dates will blackout, or make unusable, any active or previously active RDQ for the designated warehouse between the dates. The dates represent the day 
    before the picks are received by the warehouse. For example, a 1/22/2025 start date will affect RDQs received on the morning of 1/23/2025. An end date of 1/23/2025 
    will prevent any picks from being received on 1/24/2025.
</p>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class="t-button"})
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DC.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) | 
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

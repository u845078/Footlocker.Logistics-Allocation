@model IEnumerable<Footlocker.Logistics.Allocation.Models.ProductHierarchyOverrides>

    @{
        ViewBag.Title = "Seasonality Overrides";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <script src="@Url.Content("~/Scripts/Footlocker/window.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/FootLocker/conceptType.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/form2js.js")" type="text/javascript"></script>

    <h2>@ViewBag.Title</h2>
    @Html.Raw("<font color=red>" + ViewData["message"] + "</font>")
    <div id="ContentContainer" class="content-container" style="margin-top: 40px;">
        <div>
            @Html.ActionLink("Create", "Create", null, new { @class = "t-button", @style = "float: right;" })
        </div>
        <br />
        @(Html.Telerik().Grid<Footlocker.Logistics.Allocation.Models.ProductHierarchyOverrides>(Model)
        .Name("ProductHierarchyOverridesGrid")
        //.DataKeys(dataKeys => dataKeys.Add(o => o.productHierarchyOverrideID))
        .HtmlAttributes(new { style = "margin-top: 10px;", @class = "selectable-grid" })
        .Columns(columns =>
        {
        columns.Bound(o => o.productHierarchyOverrideID).Visible(false);
        columns.Bound(o => o.productOverrideType.productOverrideTypeDesc).Title("Override Level");
        columns.Bound(o => o.effectiveFromDt).Title("Start Date").Format("{0:MM/dd/yyyy}");
        columns.Bound(o => o.effectiveToDt).Title("End Date").Format("{0:MM/dd/yyyy}");
        columns.Bound(o => o.displayOverrideValue).Title("Override Level Data");
        columns.Bound(o => o.displayNewValue).Title("To Category/Brand ID");
        columns.Bound(o => o.lastModifiedUserName).Title("Last Modified User");
        columns.Bound(o => o.lastModifiedDate).Title("Last Modified Date").Format("{0:MM/dd/yyyy h:mm:ss tt}");
        columns.Template(@<text>
        <span style="">
            @Html.ActionLink("Edit", "Edit", new { id = item.productHierarchyOverrideID }, new { @class = "t-button" })
            @Html.ActionLink("Delete", "Delete", new { id = item.productHierarchyOverrideID }, new { @class = "t-button", onclick = "return confirm('Are you sure you want to delete this override?  This cannot be undone.');" })
        </span>
        </text>)
                .Width(150);
        })
        .Sortable(s =>
        {
            s.SortMode(GridSortMode.MultipleColumn);
            //s.OrderBy(order => order.Add(rf => rf.CreateDate).Descending());
        })
        .Pageable(p => p.PageSize(50))
        .Filterable()
        .Groupable(grouping => grouping.Enabled(false))
        .Footer(true)
        )
    </div>

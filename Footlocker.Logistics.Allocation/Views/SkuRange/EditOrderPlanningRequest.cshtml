@model Footlocker.Logistics.Allocation.Models.OrderPlanningRequest

@{
    ViewBag.Title = "EditOrderPlanningRequest";
}

<h2>EditOrderPlanningRequest</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>OrderPlanningRequest</legend>

        @Html.HiddenFor(model => model.ID)

        @Html.HiddenFor(model => model.PlanID)

        <div class="editor-label">
            @Html.LabelFor(model => model.StartSend)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartSend)
            @Html.ValidationMessageFor(model => model.StartSend)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EndSend)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndSend)
            @Html.ValidationMessageFor(model => model.EndSend)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back", "PresentationQuantities", new { planID = Model.PlanID }, new {@class="t-button"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

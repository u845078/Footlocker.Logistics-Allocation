@model Footlocker.Logistics.Allocation.Models.StoreBTS
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>StoreSeasonality</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Count)
        @Html.HiddenFor(model => model.Year)
        @Html.HiddenFor(model => model.Division)

        <div class="editor-label">
            @Html.LabelFor(model => model.Year)
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Details", "Details", new { id = Model.ID }, new { @class = "t-button" })
    @Html.ActionLink("Back to List", "Index", null, new { @class="t-button"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

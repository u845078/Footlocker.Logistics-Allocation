@model IEnumerable<Footlocker.Logistics.Allocation.Models.DTSConstraintModel>

@{
    ViewBag.Title = "AR SKU Constraints";
}

<h2>AR SKU Constraints</h2>


@(Html.Telerik().Grid(Model)
        .Name("DTSGrid")
        .Columns(columns =>
        {
            columns.Bound(o => o.Sku).Width(175);
            columns.Bound(o => o.ItemMaster.Description).Width(150);
            columns.Bound(o => o.Vendor).Width(50);
            columns.Bound(o => o.StartDate);
            columns.Bound(o => o.EndDate);
            columns.Bound(o => o.VendorPackQty);
            columns.Bound(o => o.OrderDays);
            columns.Bound(o => o.CreatedBy).Title("Updated By");
            columns.Bound(o => o.CreateDate).Title("Last Updated");
            columns.Command(commands =>
            {
                commands
                .Custom("Details")
                .Text("Details")
                .DataRouteValues(route => { route.Add(o => o.Sku).RouteKey("Sku"); })
                .Ajax(false)
                .Action("Details", "DTS");
            }).HtmlAttributes(new { style = "text-align: left" }).Width(300);
        })
        .DataBinding(dataBinding =>
        {
            dataBinding.Server().Select("Constraints", "DTS");
            //dataBinding.Ajax().Select("_Constraints", "DTS");
        })
        .Sortable(sorting => sorting.Enabled(true))
        .Pageable(paging => paging.Enabled(true))
        .Filterable(filtering => filtering.Enabled(true))
        .Groupable(grouping => grouping.Enabled(false))
            .Footer(true)
)

